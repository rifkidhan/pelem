{
	"typescript": {
		"lineWidth": "100",
		"useTabs": true,
		"quoteStyle": "alwaysDouble",
		"trailingCommas": "never"
	},
	"json": {
		"lineWidth": 80,
		"useTabs": false,
		"trailingCommas": "never"
	},
	"markdown": {},
	"malva": {
		"printWidth": 100,
		"useTabs": true,
		"quotes": "alwaysSingle"
	},
	"markup": {
		"printWidth": 100,
		"useTabs": true,
		"scriptIndent": true,
		"styleIndent": true,
		"doctypeKeywordCase": "ignore",
		"component.selfClosing": true,
		"svelteAttrShorthand": true,
		"svelteDirectiveShorthand": true
	},
	"excludes": ["**/node_modules", "**/*-lock.json"],
	"plugins": [
		"https://plugins.dprint.dev/typescript-0.93.3.wasm",
		"https://plugins.dprint.dev/json-0.19.4.wasm",
		"https://plugins.dprint.dev/markdown-0.17.8.wasm",
		"https://plugins.dprint.dev/g-plane/malva-v0.11.1.wasm",
		"https://plugins.dprint.dev/g-plane/markup_fmt-v0.18.0.wasm"
	]
}
